        <div class="signature"></div>
      </div>
      <div class="signature">
        <div class="signature"></div>
        <div class="signature"></div>
        <div class="signature rightPosition"></div>
      </div>
      <div class="signature">
        <div class="signature"></div>
        <div class="signature"></div>
        <div class="signature"></div>
      </div>
      <div class="signature">
        <div class="signClass"></div>
        <div class="signature"></div>
        <div class="signature rightPosition"></div>
      </div>
      <div class="signature">
        <div class="signature"></div>
        <div class="signature"></div>
        <div class="dateValue"><%= employee.date %></div>
      </div>
      <div class="signature">
        <div class="signClass">Signature</div>
        <div class="signature"></div>
        <div class="signature rightPosition">Date</div>
      </div>
    </main>
    <footer>
      <p class="footer text-muted">
        &copy; Copyright 2022 <%= employee.company_name %>
      </p>
    </footer>
